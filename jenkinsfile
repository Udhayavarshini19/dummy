pipeline {
    agent any

    environment {
        CYPRESS_CACHE_FOLDER = "${WORKSPACE}/.cache" // Set cache folder
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Udhayavarshini19/dummy'  // Replace with your repo URL
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'  // Install Cypress and other dependencies
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    try {
                        sh 'npx cypress run --headless'  // Run tests in headless mode
                    } catch (Exception e) {
                        currentBuild.result = 'FAILURE' // Mark build as failed if tests fail
                    }
                }
            }
        }

        stage('Archive Test Results') {
            steps {
                script {
                    junit 'cypress/results/*.xml'  // Store test results (if configured)
                    archiveArtifacts artifacts: 'cypress/screenshots/**/*', allowEmptyArchive: true  // Archive screenshots
                    archiveArtifacts artifacts: 'cypress/videos/**/*', allowEmptyArchive: true  // Archive videos
                }
            }
        }
    }

    post {
        always {
            echo 'Cypress Test Execution Completed'
        }
        failure {
            echo 'Some tests failed! Check reports for details.'
        }
    }
}
